		{
			"name": "Get the Votes by 'sub_id'",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status 200\", () => pm.response.to.have.status(200));\r",
							"const list = pm.response.json();\r",
							"const voteId = Number(pm.collectionVariables.get(\"voteId\"));\r",
							"const imageId = pm.collectionVariables.get(\"imageId\");\r",
							"const imageUrl = pm.collectionVariables.get(\"imageUrl\");\r",
							"\r",
							"pm.test(\"Contains our vote\", () => {\r",
							"  const found = list.some(v => Number(v.id) === voteId && v.image_id === imageId);\r",
							"  pm.expect(found).to.be.true;\r",
							"});\r",
							"\r",
							"const ourVote = list.find(v => Number(v.id) === voteId);\r",
							"pm.test(\"Vote has image object\", () => {\r",
							"  pm.expect(ourVote).to.have.property(\"image\");\r",
							"  pm.expect(ourVote.image).to.be.an(\"object\");\r",
							"});\r",
							"\r",
							"pm.test(\"Image object has correct id and url\", () => {\r",
							"  pm.expect(ourVote.image).to.have.property(\"id\");\r",
							"  pm.expect(ourVote.image.id).to.eql(imageId);\r",
							"  pm.expect(ourVote.image).to.have.property(\"url\");\r",
							"  pm.expect(ourVote.image.url).to.eql(imageUrl);\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/votes?sub_id={{subId}}&limit=100",
