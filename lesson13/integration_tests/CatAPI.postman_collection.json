							"const body = pm.response.json();\r",
							"pm.test(\"Vote success\", () => pm.expect((body.message||\"\").toLowerCase()).to.eql(\"success\"));\r",
							"pm.collectionVariables.set(\"voteId\", body.id);\r",
							""
