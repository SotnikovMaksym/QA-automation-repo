	"item": [
		{
			"name": "1 random image",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status 200\", () => pm.response.to.have.status(200));\r",
							"const responseData = pm.response.json();\r",
							"pm.test(\"Non-empty array\", () => pm.expect(responseData.length).to.be.above(0));\r",
							"pm.test(\"Has image id and url\", () => {\r",
							"  pm.expect(responseData[0]).to.have.property(\"id\");\r",
							"  pm.expect(responseData[0]).to.have.property(\"url\");\r",
							"});\r",
							"\r",
							"pm.collectionVariables.set(\"imageId\", responseData[0].id);\r",
							"pm.collectionVariables.set(\"imageUrl\", responseData[0].url);\r",
							"pm.test(\"imageId and imageUrl saved\", () => {\r",
							"  pm.expect(pm.collectionVariables.get(\"imageId\")).to.be.a(\"string\");\r",
							"  pm.expect(pm.collectionVariables.get(\"imageUrl\")).to.be.a(\"string\");\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"if(!pm.collectionVariables.get('apiKey')) throw new Error('Missing apiKey');"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/images/search?limit=1",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"images",
						"search"
					],
					"query": [
						{
							"key": "limit",
							"value": "1"
						}
					]
				}
			},
			"response": []
		},
