{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "@cucumber/cucumber"],
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": [
    "features/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "src"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
