{
  "name": "lesson19-football-automation",
  "version": "1.0.0",
  "description": "Playwright test automation project for Football.ua using component-based Page Object Model",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "report": "playwright show-report",
    "cucumber": "cucumber-js",
    "cucumber:parallel": "cucumber-js --parallel 2",
    "cucumber:smoke": "cucumber-js --tags @smoke",
    "cucumber:positive": "cucumber-js --tags @positive",
    "cucumber:headed": "cross-env HEADLESS=false cucumber-js",
    "cucumber:report": "cucumber-js && node -e \"require('open')('reports/cucumber-report.html')\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"features/**/*.ts\""
  },
  "keywords": [
    "playwright",
    "typescript",
    "e2e-testing",
    "page-object-model",
    "component-based",
    "test-automation"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@cucumber/pretty-formatter": "^2.4.1",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@stylistic/eslint-plugin-ts": "^4.4.1",
    "@types/chai": "^5.2.3",
    "@types/node": "^24.10.1",
    "chai": "^6.2.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^16.5.0",
    "playwright": "^1.57.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0"
  }
}
